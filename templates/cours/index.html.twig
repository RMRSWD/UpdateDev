{% extends 'base.html.twig' %}

{% block title %}Cours index{% endblock %}

{% block body %}
    <h1>Cours index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Semestre</th>
                <th>Nom</th>
                <th>Description</th>
                <th>Etcs</th>
                <th>Nombre d'heures TD</th>
                <th>Nombre d'heures TP</th>
                <th>Nombre d'heures CM</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for cour in cours %}
            <tr>
                <td>{{ cour.id }}</td>
                <td>{{ cour.Semestre }}</td>
                <td>{{ cour.Nom }}</td>
                <td>{{ cour.Description }}</td>
                <td>{{ cour.Etcs }}</td>
                <td>{{ cour.NombreHeureTD }}</td>
                <td>{{ cour.NombreHeureTP }}</td>
                <td>{{ cour.CM }}</td>
                <td>
                    <a href="{{ path('app_cours_show', {'id': cour.id}) }}">show</a>
                    <a href="{{ path('app_cours_edit', {'id': cour.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_cours_new') }}">Create new</a>
{% endblock %}
